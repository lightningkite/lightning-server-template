<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:requires="session: Session"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            >

        <ImageButton
                android:id="@+id/backButton"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_back"
                android:contentDescription="@string/back"
                android:background="?attr/selectableItemBackground"
                android:layout_gravity="bottom|start"
                />

        <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/barForeground"
                android:padding="8dp"
                style="@style/Body"
                tools:text="Title"
                />
        <ImageButton
                android:id="@+id/settings"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_settings"
                android:contentDescription="@string/settings"
                android:background="?attr/selectableItemBackground"
                android:layout_gravity="bottom|start"
                tools:goTo="@layout/settings"
                />
    </LinearLayout>

    <com.lightningkite.rx.viewgenerators.SwapView
            android:id="@+id/session"
            tools:stackId="sessionStack"
            tools:stackDefault="@layout/set_library"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/background"
            />
</LinearLayout>
