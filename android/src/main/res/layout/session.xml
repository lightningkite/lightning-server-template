<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:requires="session: Session"
        >

    <LinearLayout
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            >

        <ImageButton
                android:id="@+id/backButton"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_back"
                android:contentDescription="@string/back"
                android:background="?attr/selectableItemBackground"
                android:layout_gravity="bottom|start"
                />

        <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/barForeground"
                android:padding="8dp"
                style="@style/SubHeader"
                tools:text="Title"
                />
    </LinearLayout>

    <com.lightningkite.rx.viewgenerators.SwapView
            android:id="@+id/session"
            tools:stackId="sessionStack"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/background"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            >

        <ToggleButton
                style="@style/ButtonTab"
                android:id="@+id/mainTab"
                android:drawableTop="@drawable/ic_home"
                android:text="Main"
                android:textOn="Main"
                android:textOff="Main"
                android:checked="true"
                android:background="@drawable/button_toggle"
                android:layout_gravity="bottom|start"
                tools:reset="@layout/settings"
                tools:onStack="sessionStack"
                />
        <ToggleButton
                style="@style/ButtonTab"
                android:id="@+id/altTab"
                android:drawableTop="@drawable/ic_filter"
                android:text="Alt"
                android:textOn="Alt"
                android:textOff="Alt"
                android:background="@drawable/button_toggle"
                android:layout_gravity="bottom|start"
                tools:reset="@layout/settings"
                tools:onStack="sessionStack"
                />
        <ToggleButton
                style="@style/ButtonTab"
                android:id="@+id/settingsTab"
                android:drawableTop="@drawable/ic_settings"
                android:text="@string/settings"
                android:textOn="@string/settings"
                android:textOff="@string/settings"
                android:background="@drawable/button_toggle"
                android:layout_gravity="bottom|start"
                tools:reset="@layout/settings"
                tools:onStack="sessionStack"
                />
    </LinearLayout>
</LinearLayout>
