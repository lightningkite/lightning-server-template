<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonBase">
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/barForeground</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Header">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/josefinsans_regular</item>
        <item name="android:textColor">@color/foreground</item>
    </style>

    <style name="SubHeader">
        <item name="android:textColor">@color/foreground</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Body">
        <item name="android:textColor">@color/foreground</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInput">
        <item name="android:textColor">@color/foreground</item>
        <item name="android:textColorHint">@color/foregroundFade</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/textedit_background</item>
    </style>


</resources>