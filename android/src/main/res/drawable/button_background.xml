<?xml version="1.0" encoding="utf-8"?>
<selector
        xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/>
            <gradient android:angle="-45" android:startColor="#5C84AD" android:endColor="#336699"/>
            <corners android:radius="96dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/disabled"/>
            <gradient android:angle="-45" android:startColor="#5C84AD" android:endColor="#336699"/>
            <corners android:radius="96dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/disabled"/>
            <gradient android:angle="-45" android:startColor="#336699" android:endColor="#306191"/>
            <corners android:radius="96dp"/>
        </shape>
    </item>
</selector>
